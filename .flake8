[flake8]
# Maximum line length (Black's default is 88)
max-line-length = 88
# Maximum complexity of functions
max-complexity = 10
# Ignore these error codes
ignore =
    # Line break before binary operator (W503 and W504 are mutually exclusive)
    W503,
    # Line break occurred before a binary operator
    W504,
    # Line too long (handled by Black)
    E501,
    # Do not assign a lambda expression, use a def
    E731,
    # Module level import not at top of file (conflicts with isort sometimes)
    E402,
    # Line break occurred before a binary operator
    W503,
    # Line break occurred after a binary operator
    W504,
    # Blank line contains whitespace
    W293,
    # Multiple spaces before operator
    E221,
    # Multiple spaces after operator
    E222,
    # Multiple spaces after ','
    E241,
    # Multiple spaces before keyword
    E272
# Exclude common directories
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    build,
    dist,
    .venv,
    venv,
    env,
    .tox,
    .mypy_cache,
    .pytest_cache
# Enable the following plugins
select =
    # Default flake8
    E, W, F,
    # flake8-bugbear
    B,
    # flake8-comprehensions
    C4,
    # flake8-import-order
    I
# Per-file-ignores =
#     # Allow __init__ files to have unused imports
#     __init__.py: F401
